<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.LoginController" prefWidth="400" prefHeight="250">
   <children>
      <Label layoutX="150" layoutY="20" text="Login" style="-fx-font-size: 20;" />
      <Label layoutX="50" layoutY="70" text="Username:" />
      <TextField fx:id="usernameField" layoutX="130" layoutY="70" prefWidth="200" />
      <Label layoutX="50" layoutY="110" text="Password:" />
      <PasswordField fx:id="passwordField" layoutX="130" layoutY="110" prefWidth="200" />
      <Button layoutX="150" layoutY="160" text="Login" onAction="#handleLogin" />
      <Hyperlink layoutX="150" layoutY="200" text="Registrar" onAction="#goToRegister" />
   </children>
</AnchorPane>