<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="250" prefWidth="400" scaleShape="false" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="controller.LoginController">
   <children>
      <Label layoutX="150" layoutY="20" style="-fx-font-size: 20;" text="Login" />
      <Label layoutX="50" layoutY="70" text="Username:" />
      <TextField fx:id="usernameField" layoutX="130" layoutY="70" prefWidth="200" />
      <Label layoutX="50" layoutY="110" text="Password:" />
      <PasswordField fx:id="passwordField" layoutX="130" layoutY="110" prefWidth="200" />
      <Button layoutX="150" layoutY="160" onAction="#handleLogin" text="Login" />
      <Hyperlink layoutX="150" layoutY="200" onAction="#goToRegister" text="Registrar" />
   </children>
</AnchorPane>
