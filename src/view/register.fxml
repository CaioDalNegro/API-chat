<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.RegisterController" prefWidth="400" prefHeight="300">
   <children>
      <Label layoutX="140" layoutY="20" text="Registrar" style="-fx-font-size: 20;" />
      <Label layoutX="50" layoutY="70" text="Username:" />
      <TextField fx:id="usernameField" layoutX="130" layoutY="70" prefWidth="200" />
      <Label layoutX="50" layoutY="110" text="Password:" />
      <PasswordField fx:id="passwordField" layoutX="130" layoutY="110" prefWidth="200" />
      <Label layoutX="50" layoutY="150" text="Confirmar Senha:" />
      <PasswordField fx:id="confirmPasswordField" layoutX="180" layoutY="150" prefWidth="150" />
      <Button layoutX="150" layoutY="200" text="Registrar" onAction="#handleRegister" />
   </children>
</AnchorPane>